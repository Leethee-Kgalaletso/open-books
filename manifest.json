{
    "manifest_version": 3,
    "version": "1.0",
    "name": "Open Books",
    "description": "Open tabs to books in less clicks",
    "content_scripts": [
       {
        "matches": ["<all_urls>"],
        "js": ["main.js"]
       } 
    ],
    "permissions": [
        "tabs"
    ],
    "action": {
        "default_title": "open books",
        "default_popup": "index.html"
    },
    "background": {
        "service_worker": "background.js"
    }
}